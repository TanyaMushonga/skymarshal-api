# Django Configuration
DJANGO_SETTINGS_MODULE=api.settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,127.0.0.1:8000

# Database Configuration (PostgreSQL + PostGIS)
DB_NAME=skymarshal_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration (RabbitMQ)
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# AWS S3 Object Storage (Primary storage for videos, images, PDFs)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_SES_REGION_NAME=us-east-1
AWS_SNS_REGION_NAME=us-east-1
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Kafka Configuration (Event streaming)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Computer Vision Configuration
CV_CONFIDENCE_THRESHOLD=0.5
CV_SPEED_LIMIT_DEFAULT=60.0

